{
	"name": "shopify-wrapper",
	"version": "0.1.1",
	"description": "Query and mutate shopfiy data easily and safely",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"typings": "dist/index.d.ts",
	"scripts": {
		"clean": "rimraf dist/",
		"prepublishOnly": "npm run build",
		"build": "npm run clean && npm run build:src",
		"build:src": "tsup src/index.ts",
		"lint": "xo",
		"lint:fix": "xo --fix",
		"test": "vitest"
	},
	"engines": {
		"node": ">=14.16"
	},
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist",
		"LICENSE",
		"README.md"
	],
	"author": {
		"name": "pnxdxt",
		"email": "pnxdxt@gmail.com",
		"url": "https://pnxdxt.com"
	},
	"license": "MIT",
	"repository": "https://github.com/pnxdxt/shopify-wrapper",
	"homepage": "https://github.com/pnxdxt/shopify-wrapper#readme",
	"bugs": {
		"url": "https://github.com/pnxdxt/shopify-wrapper/issues"
	},
	"devDependencies": {
		"@tsconfig/node14": "^1.0.3",
		"@types/node": "^18.0.3",
		"c8": "^7.11.3",
		"rimraf": "^3.0.2",
		"semantic-release": "^19.0.3",
		"tsup": "^6.1.3",
		"type-fest": "^2.16.0",
		"typescript": "^4.7.4",
		"vitest": "^0.18.0",
		"xo": "^0.50.0",
		"zod": "^3.17.3"
	},
	"tsup": {
		"splitting": false,
		"sourcemap": true,
		"clean": true,
		"dts": true,
		"target": "es2020",
		"format": [
			"esm",
			"cjs"
		]
	},
	"keywords": [
		"shopify",
		"graphql",
		"typescript",
		"helper"
	],
	"dependencies": {
		"cross-fetch": "^3.1.5",
		"dotenv": "^16.0.1",
		"graphql": "^16.5.0",
		"graphql-tag": "^2.12.6"
	},
	"peerDependencies": {
		"webpack": ">=1.11.0"
	}
}
